# Web UI port (nginx reverse proxy)
WEB_UI_PORT=8501

# F1 UDP telemetry ports (one per rig)
UDP_PORT_RIG1=20777
UDP_PORT_RIG2=20778
UDP_PORT_RIG3=20779
UDP_PORT_RIG4=20780

# Redis host (for app containers to connect)
REDIS_HOST=redis

# Elastic Agent version (OTel Collector distribution)
ELASTIC_AGENT_VERSION=9.3.0

# Elastic Stack version (Elasticsearch + Kibana, used with --profile local)
ELASTIC_STACK_VERSION=9.3.0

# Elasticsearch endpoint
# Local: http://elasticsearch:9200 (default, works with --profile local)
# Cloud: https://my-deploy.es.us-central1.gcp.cloud.es.io:443
# Serverless: https://my-project.es.us-east-1.aws.elastic.cloud:443
ELASTIC_ENDPOINT=http://elasticsearch:9200

# Elasticsearch API key (leave empty for local dev with security disabled)
ELASTIC_API_KEY=

# Kibana host port (only used with --profile local)
KIBANA_PORT=5601

# Kibana URL (for setup-kibana.sh data view creation)
# Local: http://localhost:5601 (default, derived from KIBANA_PORT)
# Cloud: https://my-deploy.kb.us-central1.gcp.cloud.es.io:9243
KIBANA_URL=

# Elasticsearch index refresh interval (for near-real-time dashboards)
# Lower values reduce search latency but increase I/O. Default: 200ms
ES_REFRESH_INTERVAL=200ms

# OTLP endpoint (for collector processes)
OTLP_ENDPOINT=http://otel-collector:4318
